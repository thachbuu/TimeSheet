                                        @Html.Raw("<th width='20px'>")      
                                    }
                                    else{
                                         @Html.Raw("<th width='20px' bgcolor='#cccccc'>")
                                              
                                     } 
                                        if(j==1){
                                             @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Mon,new { @style = "width: 20px; align:right" }) 
                                          }
