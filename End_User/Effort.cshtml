                                            @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Wed,new { @style = "width: 20px; align:right" }) 
                                         }
                                         if(j==4){
                                            @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Thu,new { @style = "width: 20px; align:right" }) 
                                         }
                                         if(j==5){
                                            @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Fri,new { @style = "width: 20px; align:right" }) 
                                         }
                                         if(j==6){
                                            @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Sat,new { @style = "width: 20px; align:right" }) 
                                         }
                                         if(j==7){
                                            @Html.TextBox("txt_"+item.Id+"_"+j,@itemValue.Sun,new { @style = "width: 20px; align:right" }) 
                                         }
                                          var idImg = "img_"+item.Id+"_"+j; 
                                          <img src="../Images/arrow_down_mini.gif" width="16" height="16" align="right" name="@idImg" id="input-box1" onclick="OpenPopUp()" />  
                                      @Html.Raw(" </th>  ")

                                 }
                                 break;
