<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Admin Page</title>        
        <link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css" />        
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"  type="text/javascript"></script>        
    </head>
    <body>
        <div class="logo">
            <img src="~/Images/header.gif" alt="Logigear Logo">
            @if(WebSecurity.IsAuthenticated){
                <form id="logoutForm" action="~/Account/Logout" method="post">
                    @AntiForgery.GetHtml()
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                 </form>
            }
        </div>
        
        <div class="spacer"></div>        
        <h2 id="timeSheetlabel">TIME SHEET MANAGEMENT</h2>
         <div class="header">
         @if(Roles.IsUserInRole("LEADER")){
            <div>
                <span class="sub-header"><a href="~/Leader/ManageMembers"><img src="~/Images/memberIcons.png" alt="Member Logo" class="buttonNavigation"></a></span>
                <span class="sub-header"><a href="~/Leader/ManageProjects"><img src="~/Images/projectIcon.jpg" alt="Project Logo" class="buttonNavigation"></a></span>
                <span class="sub-header"><a href="~/Leader/ManageProjects"><img src="~/Images/timeSheet.png" alt="TimeSheet Logo" class="buttonNavigation"></a></span>
            </div>            
         }
        </div>        
        <div class="spacer"></div>

        <div class="content"> 
            <h2>@Page.Title</h2>;                      
            @RenderBody()
        </div>

        <div id="footer">
            Copyright © @DateTime.Now.Year LogiGear Corporation. All rights reserved
        </div>
    </body>
</html>
