<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Admin Page</title>        
        <link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css" />        
   @*     <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"  type="text/javascript"></script> *@

        @*Copy from Project Details page*@
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
        <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script src="http://code.jquery.com/ui/1.10.0/jquery-ui.js"></script>
        <link rel="stylesheet" href="/resources/demos/style.css" />
        <script type="text/javascript" src="/Scripts/jquery-te-1.3.3.min.js" charset="utf-8"></script>
        <link type="text/css" rel="stylesheet" href="/Content/jquery-te-1.3.3.css">
    </head>
    <body>
        <div class="logo">
            <img src="~/Images/logo.png" alt="Logigear Logo">           
        </div>

        <div class="content">
             @if(WebSecurity.IsAuthenticated){
                <form id="logoutForm" action="~/Account/Logout" method="post">
                    @AntiForgery.GetHtml()
                    <a href="javascript:document.getElementById('logoutForm').submit()">Sign Out</a>
                </form>
            } 

            <div class="header">
                 @RenderPage("~/_Header.cshtml")
            </div>

            <div class="spacer"></div>

            <h2>@Page.Title</h2>                      

            @RenderBody()
        </div>

        <div id="footer">
            Copyright © @DateTime.Now.Year LogiGear Corporation. All rights reserved
        </div>       
    </body>
</html>
