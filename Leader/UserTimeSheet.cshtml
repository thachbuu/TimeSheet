        var currentFirstOfWeek = Functions.FirstDateOfWeek(DateTime.Now);
        var timesheetReports = db.Query("SELECT DISTINCT(Datetime) FROM TimeManagement WHERE( @0 <= Datetime)",currentFirstOfWeek);
        foreach(var ts in timesheetReports){
            <div>@ts.Datetime</div>
        }
    }else{
        // Date: 1/1/1753 is MinValue of SQL
