@{
    Page.Title= "Manage Your Members";
    var db = Database.Open("StarterSite");
    var query = "SELECT UserId, Firstname, Lastname, Project FROM UserProfile";
    var memberList = db.Query(query);
    var grid = new WebGrid(memberList);
    if(IsPost){
        <div>@Request["UserId"]</div>
    }
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
        <title></title>
    </head>
    <body>   
        <form method="post">
            @grid.GetHtml(
            tableStyle: "grid",
            alternatingRowStyle: "alternate",
            headerStyle: "gridheader",
            footerStyle: "gridfooter",
            caption: "Members List",
            columns: grid.Columns(
                grid.Column(
                    columnName: "Firstname"
                ),                
                grid.Column(
                    columnName: "Lastname"
                ),
                grid.Column(
                    columnName: "Project"
                ),
                grid.Column(
                    columnName: "UserId",
                    header: string.Empty,
                    canSort: false,
                    format: @<div>
                                <a href="#">Details</a>
                                <div>@item.UserId</div>
                                <input type="radio" value="@item.UserId" name="UserId"></input>
                            </div>

                )
                )
            )
            <input type="submit" value="Delete">
        </form>
    </body>
</html>
