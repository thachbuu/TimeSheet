@{
    Layout="";  
    var currentFirstOfWeek = Request["currentFirstOfWeek"].AsDateTime();
    var additionalDate = Request["additionDate"].AsInt();    
    if(IsPost){
         currentFirstOfWeek = Request["currentFirstOfWeek"].AsDateTime();
         additionalDate = Request["additionDate"].AsInt();       
    }    
}
<input type="hidden" id="fow" value="@currentFirstOfWeek.AddDays(additionalDate).ToShortDateString()">


 